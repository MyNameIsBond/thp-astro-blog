---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import PostList from "../components/PostList.astro";
---

<!DOCTYPE html>
<html lang="en-us">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<div class="bg-purple-800 py-36">
				<div class="max-w-3xl container">
					<h2 class="uppercase pb-4 text-white font-semibold">
						👋🏻 Hello
					</h2>
					<h1 class="text-5xl font-bold text-white">
						This is a blog in technologies such as mobile, web and
						algorithms
					</h1>
				</div>
			</div>
			<div class="container max-w-3xl pt-20">
				<div class="border-b border-purple-100">
					<h3 class="text-3xl py-2 font-bold">Posts</h3>
				</div>
			</div>
			<PostList />
		</main>
		<Footer />
	</body>
</html>
