---
import HeaderLink from "./HeaderLink.astro";
import logo from "/images/logo.svg";
import { links } from "../config";
---

<header class="bg-purple-800">
	<nav
		class="flex flex-row justify-between px-5 md:px-0 py-4 container origin-center content-center"
	>
		<a href="/">
			<img loading="lazy" src={logo} width={100} height={30} alt="logo" />
		</a>
		<div class="self-center hidden md:block">
			{
				links.map((link) => (
					<HeaderLink
						class="px-5 py-2 font-medium text-purple-300 hover:bg-opacity-30 hover:bg-purple-50 hover:text-white rounded-md"
						href={link.url}
						{...link}
					>
						{link.title}
					</HeaderLink>
				))
			}
		</div>
		<button
			class="px-3 py-2 bg-purple-50 bg-opacity-30 font-normal rounded-md block text-white hover:bg-opacity-75 hover:text-purple-900"
			>subscribe
		</button>
	</nav>
</header>
