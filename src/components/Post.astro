---
interface Post {
    title: String;
    slug: String;
    description: String;
    pubDate: String;
    tags: string[];
    categories: string[];
    heroImage: String;
    link: String;
}

const { title, link, description, pubDate, tags, categories, heroImage } =
    Astro.props as Post;
---

<div
    class="flex flex-row w-full py-10 border-b border-purple-100 justify-between content-center"
>
    <div>
        <div class="flex flex-row content-center py-4">
            {
                tags.map((tag) => (
                    <p class="py-1 px-4 mr-3 rounded-full bg-purple-50 font-medium text-xs uppercase text-purple-900 text-opacity-80">
                        {tag}
                    </p>
                ))
            }
            <time
                class="pl-4 text-gray-600 uppercase font-medium text-xs self-center"
                >{pubDate}
            </time>
        </div>
        <div>
            <a
                href={link as string}
                class="md:text-3xl text-xl font-bold hover:text-purple-900"
            >
                {title}
            </a>
            <p class="text-gray-900 opacity-90 pt-3">{description}</p>
        </div>
    </div>
</div>
